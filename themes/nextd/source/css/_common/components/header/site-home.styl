.site-home {
  z-index :2;
  position: absolute;
  top: 0;
  display: block;
  color: white;

  font-size: 20px;
  line-height: 20px;
  padding: 20px;

  font-weight: bolder;
  border: none;
  opacity: 0;

  +tablet() {
    font-size: 50px;
    line-height: 110px;
  }

  &:after {
    content: '';
    display: block;
    border-bottom: white 1px solid;
    transform: scaleX(0);
    transition-duration: 200ms;
  }

  &:hover {
    color: white;

    &:after {
      transform: scaleX(1);
    }
  }
}
